# {{ ansible_managed }}
#
# These groups are read by MariaDB server.
# Use it for options that only the server (but not clients) should see
#
# See the examples of server my.cnf files in /usr/share/mysql/
#

# this is read by the standalone daemon and embedded servers
[server]

# this is only for the mysqld standalone daemon
[mysqld]
# Network
# Default = local binding to prevent unknown security vectors
port={{ wtd_mariadb_port }}
bind-address={{ wtd_mariadb_bind_address }}

# Directories
datadir={{ wtd_mariadb_datadir }}
socket={{ wtd_mariadb_socket }}

# Symbolic links
# Default = 0 to prevent assorted security risks
symbolic-links={{ wtd_mariadb_symbolic_links }}

# Character Sets
character-set-server={{ wtd_mariadb_character_set }}

# InnoDB Settings
innodb_large_prefix={{ wtd_mariadb_innodb_large_prefix }}
innodb_file_format={{ wtd_mariadb_innodb_file_format }}
innodb_file_per_table={{ wtd_mariadb_innodb_file_per_table }}
innodb_buffer_pool_size={{ wtd_mariadb_innodb_buffer_pool_size }}

# Query Cache
query_cache_type={{ wtd_mariadb_query_cache_type }}
query_cache_limit={{ wtd_mariadb_query_cache_limit }}
query_cache_min_res_unit={{ wtd_mariadb_query_cache_min_res_unit }}
query_cache_size={{ wtd_mariadb_query_cache_size }}

# this is only for embedded server
[embedded]

# this is only for MariaDB servers, not for MySQL
[mariadb]
